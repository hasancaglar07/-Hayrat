{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "web",
    "components",
    "hooks",
    "constants",
    "app-example",
    "dist",
    "web-build"
  ],
  "include": [
    "App.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "global.d.ts",
    "nativewind-env.d.ts"
  ]
}
